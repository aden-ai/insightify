{
  "manifest_version": 3,
  "name": "Insightify",
  "version": "1.0",
  "description": "Highlight text and get AI summaries/insights.",
  "permissions": ["activeTab", "contextMenus", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
